#! /bin/bash
rm -rf ./out_files/omp/*.out
rm -rf ./err_files/omp/*.err
echo "Time;Nthreads;MatrixSize">result_omp_polus.csv

make omp_polus_mini
for ((i = 1; i <= 128; i*=2))
do
bsub < ./lsf_files/$i.lsf
done

wait
sleep 2m


make omp_polus_small
for ((i = 1; i <= 128; i*=2))
do
bsub < ./lsf_files/$i.lsf
done

wait
sleep 5m

make omp_polus_medium
for ((i = 1; i <= 128; i*=2))
do
bsub < ./lsf_files/$i.lsf
done

sleep 5m

make omp_polus_large
for ((i = 1; i <= 128; i*=2))
do
bsub < ./lsf_files/$i.lsf
done

sleep 5m

make omp_polus_xlarge
for ((i = 1; i <= 128; i*=2))
do
bsub < ./lsf_files/$i.lsf
done



